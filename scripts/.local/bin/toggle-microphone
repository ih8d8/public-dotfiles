#!/bin/bash

pactl set-source-mute @DEFAULT_SOURCE@ toggle
command -v polybar-msg >/dev/null 2>&1 && polybar-msg action "#microphone.hook.0"

MUTE_STATUS="$(pactl get-source-mute "$(pactl get-default-source)" | awk '{print $2}')"
if [ "${MUTE_STATUS}" == "no" ]; then
  notify-send --icon=mic-ready "Microphone is enabled!"
elif [ "${MUTE_STATUS}" == "yes" ]; then
  notify-send --icon=mic-off "Microphone is disabled!"
else
  notify-send --icon=dialog-error "Something is wrong!"
fi
