#!/bin/sh

VARIABLES="
net.ipv6.conf.all.disable_ipv6
"

for VARIABLE in ${VARIABLES}; do
    echo "current value:"
    sysctl ${VARIABLE}
    CURRENT_VALUE="$(sysctl -n ${VARIABLE})"
    echo "new value:"
    [ "${CURRENT_VALUE}" == "0"  ] && sudo sysctl -w ${VARIABLE}=1 || sudo sysctl -w ${VARIABLE}=0
    echo
done
